{
    "users": {
        "me": "keikakub",
        "mods": ["glicnak"]
    },
    "database": {
        "tables": [
            {
                "name": "BLOOD_BOWL_TEAM",
                "sql": "(name text primary key, wins integer not null, losses integer not null, draws integer not null, created_on datetime not null, retired_on datetime)"
            },
            {
                "name": "BLOOD_BOWL_QUEUE",
                "sql": "(username text primary key, added_on datetime not null)"
            }
        ]
    },
    "join": {
        "ignoreList": [ "balbasbot", "keikakub", "streamlabs", "ryothscus"],
        "messages": [
            "Watchu doing?",
            "Welcome. Stay a while!",
            "Don't let your dreams be memes!",
            "Hello!",
            "[generic greeting] beep boop",
            "It's nice to see you!",
            "Don't be shy!"
        ]
    },
    "commands": {
        "choices": ["dice", "help", "pick", "team"],
        "details": {
            "dice": {
                "permissions": 2,
                "help": [
                    {
                        "example": "dice",
                        "description": "Roll a d6"
                    }
                ]
            },
            "help": {
                "permissions": 2,
                "help": [
                    {
                        "example": "help pick",
                        "description": "Get help information for the 'pick' command"
                    }
                ]
            },
            "pick": {
                "permissions": 2,
                "commands": ["team", "skill"],
                "help": [
                    {
                        "example": "pick",
                        "description": "Pick a random team"
                    },
                    {
                        "example": "pick team",
                        "description": "Pick a random team"
                    },
                    {
                        "example": "pick skill [GAPSM]",
                        "description": "Pick a random skill from the given skill categories`"
                    }
                ]
            },
            "team": {
                "permissions": 1,
                "commands": ["create", "retire", "draw", "loss", "win", "list"],
                "help": [
                    {
                        "example": "team",
                        "description": "Get the stats (wins, draws, losses) for the current team"
                    },
                    {
                        "example": "list",
                        "description": "Get the stats (wins, draws, losses) for for all teams"
                    },
                    {
                        "example": "team [TEAM_NAME]",
                        "description": "Get the stats (wins, draws, losses) for the given team"
                    },
                    {
                        "example": "team create [TEAM_NAME]",
                        "description": "Start a run with a Blood Bowl 2 team"
                    },
                    {
                        "example": "team retire",
                        "description": "End the run of the current Blood Bowl 2 team"
                    },
                    {
                        "example": "team win",
                        "description": "Add a win for the current team"
                    },
                    {
                        "example": "team win -1",
                        "description": "Remove a win for the current team"
                    }
                ]
            }
        }
    },
